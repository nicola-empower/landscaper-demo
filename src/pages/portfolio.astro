---
import Layout from "../layouts/Layout.astro";

const projects = [
    {
        title: "Surrey Estate Gardens",
        category: "Full Transformation",
        image: "/hero.png",
        desc: "A sprawling country estate with formal lawns, wildflower meadows, and a sunken seating area.",
    },
    {
        title: "Urban Courtyard Oasis",
        category: "Small Garden",
        image: "/hero.png",
        desc: "Maximizing space with vertical planting, porcelain paving, and integrated cedar benching.",
    },
    {
        title: "Contemporary Outdoor Kitchen",
        category: "Outdoor Living",
        image: "/hero.png",
        desc: "Features a pizza oven, granite worktops, and a bespoke timber pergola for year-round dining.",
    },
    {
        title: "Japanese Zen Garden",
        category: "Design",
        image: "/hero.png",
        desc: "Minimalist design with water features, acers, and Scottish pebbles for ultimate tranquility.",
    },
    {
        title: "Family Entertainment Space",
        category: "Full Transformation",
        image: "/hero.png",
        desc: "Included a composite deck, artificial lawn for durability, and a fire pit zone.",
    },
    {
        title: "Period Property Driveway",
        category: "Hardscaping",
        image: "/hero.png",
        desc: "Reclaimed York stone driveway with heritage brick edging to match the property age.",
    },
];
---

<Layout title="Portfolio | Eden Landscapes">
    <main class="bg-stone-50">
        <!-- Hero -->
        <div
            class="relative isolate overflow-hidden bg-green-900 py-24 sm:py-32"
        >
            <img
                src="/hero.png"
                alt=""
                class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.3]"
            />
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-bold tracking-tight text-white sm:text-6xl font-serif"
                    >
                        Garden Transformations
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-green-100">
                        Browse our portfolio of award-winning garden designs.
                        From concept to completion, we create spaces that last.
                    </p>
                </div>
            </div>
        </div>

        <!-- Project Grid -->
        <div class="py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div
                    class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
                >
                    {
                        projects.map((project) => (
                            <article class="flex flex-col items-start justify-between group cursor-pointer bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300">
                                <div class="relative w-full overflow-hidden">
                                    <img
                                        src={project.image}
                                        alt={project.title}
                                        class="aspect-[16/9] w-full bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2] group-hover:scale-105 transition-transform duration-700"
                                    />
                                    <div class="absolute inset-0 ring-1 ring-inset ring-gray-900/10" />
                                </div>
                                <div class="max-w-xl p-8">
                                    <div class="flex items-center gap-x-4 text-xs">
                                        <span class="relative z-10 rounded-full bg-green-50 px-3 py-1.5 font-medium text-green-700 hover:bg-green-100">
                                            {project.category}
                                        </span>
                                    </div>
                                    <div class="group relative">
                                        <h3 class="mt-3 text-xl font-semibold leading-6 text-gray-900 group-hover:text-green-700 font-serif">
                                            <a href="#">
                                                <span class="absolute inset-0" />
                                                {project.title}
                                            </a>
                                        </h3>
                                        <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                                            {project.desc}
                                        </p>
                                    </div>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </div>
        </div>

        <!-- CTA -->
        <div class="bg-white py-16 sm:py-24 border-t border-gray-200">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2
                        class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-serif"
                    >
                        Inspired?
                    </h2>
                    <p
                        class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-600"
                    >
                        Start your own transformation today with our online
                        planner.
                    </p>
                    <div class="mt-10 flex justify-center gap-x-6">
                        <a
                            href="/quote"
                            class="rounded-full bg-green-700 px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600 transition-all"
                            >Start Planner</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
