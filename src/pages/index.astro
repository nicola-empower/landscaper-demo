---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import FAQ from "../components/FAQ.jsx";
import Testimonials from "../components/Testimonials.jsx";
import GardenEstimator from "../components/GardenEstimator.jsx";

const features = [
	{ title: "Bespoke Design", desc: "Every garden is unique to you." },
	{ title: "Master Craftsmanship", desc: "Stone, wood, and water features." },
	{ title: "Award Winning", desc: "RHS Gold Medal winners." },
];
---

<Layout title="Eden Landscapes - Award Winning Garden Design">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative w-full overflow-hidden min-h-screen flex flex-col">
			<img
				src="/hero.png"
				alt="Luxury landscaped garden at sunset"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.6]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 grow flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div
						class="inline-flex items-center gap-2 px-4 py-1 rounded-full bg-white/10 backdrop-blur-md text-white text-sm font-medium mb-6 border border-white/20"
					>
						âœ¨ Transforming Outdoor Specs Since 2005
					</div>

					<h1
						class="text-6xl font-serif font-bold tracking-tight text-white sm:text-8xl mb-8 drop-shadow-2xl"
					>
						Curating Your <br />
						<span
							class="text-transparent bg-clip-text bg-linear-to-r from-green-300 to-accent"
							>Private Sanctuary</span
						>
					</h1>
					<p
						class="mt-4 text-xl leading-8 text-gray-100 drop-shadow-lg max-w-xl font-light"
					>
						From contemporary urban courtyards to expansive country
						estates. We combine horticulture and architecture to
						create outdoor living spaces that inspire.
					</p>

					<div class="mt-10 flex flex-wrap gap-6">
						<a
							href="#"
							class="rounded-none border-2 border-white bg-white text-primary px-8 py-4 text-lg font-bold tracking-wider hover:bg-transparent hover:text-white transition-all duration-500 uppercase"
						>
							Request Consultation
						</a>
						<a
							href="#"
							class="rounded-none border-2 border-white text-white px-8 py-4 text-lg font-bold tracking-wider hover:bg-white hover:text-primary transition-all duration-500 uppercase"
						>
							View Portfolio
						</a>
					</div>
				</div>
			</div>

			<!-- Trust Bar Overlay -->
			<div
				class="absolute bottom-0 w-full backdrop-blur-sm bg-black/20 border-t border-white/10"
			>
				<TrustBar client:visible theme="dark" />
			</div>
		</div>

		<!-- Aspirational "Dream" Section -->
		<div class="py-24 bg-stone-50">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="grid lg:grid-cols-2 gap-16 items-center">
					<div>
						<h2
							class="text-4xl font-serif font-bold text-primary mb-6"
						>
							Designed for Living
						</h2>
						<p class="text-lg text-gray-600 mb-8 leading-relaxed">
							A garden is more than just plants. It's an extension
							of your home, a place for entertainment, relaxation,
							and connection. Our design philosophy centers on how
							you want to *feel* in your space.
						</p>
						<div class="space-y-6">
							{
								features.map((f) => (
									<div class="flex gap-4">
										<div class="h-12 w-12 rounded-full bg-accent/20 flex items-center justify-center text-accent shrink-0">
											<svg
												xmlns="http://www.w3.org/2000/svg"
												width="24"
												height="24"
												viewBox="0 0 24 24"
												fill="none"
												stroke="currentColor"
												stroke-width="2"
												stroke-linecap="round"
												stroke-linejoin="round"
											>
												<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
											</svg>
										</div>
										<div>
											<h3 class="text-xl font-bold text-gray-900">
												{f.title}
											</h3>
											<p class="text-gray-500">
												{f.desc}
											</p>
										</div>
									</div>
								))
							}
						</div>
					</div>
					<div class="relative">
						<div
							class="aspect-4/5 bg-gray-200 rounded-2xl overflow-hidden shadow-2xl rotate-3 hover:rotate-0 transition-all duration-500"
						>
							<img
								src="/hero.png"
								alt="Garden detail"
								class="h-full w-full object-cover"
							/>
							<div
								class="absolute bottom-8 left-8 right-8 bg-white/90 backdrop-blur p-6 rounded-xl"
							>
								<p class="font-serif italic text-gray-600">
									"The detail and finish is simply
									outstanding. It has completely changed how
									we use our home."
								</p>
								<p class="mt-4 font-bold text-primary">
									- The Anderson Family, Surrey
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Garden Planner Section -->
		<div class="py-24 bg-green-50 relative">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2
						class="text-base font-semibold leading-7 text-green-700"
					>
						Online Garden Planner
					</h2>
					<p
						class="mt-2 text-3xl font-serif font-bold tracking-tight text-primary sm:text-4xl"
					>
						Start Your Dream Garden
					</p>
					<p class="mt-4 text-lg text-gray-600">
						Tell us about your space and vision to get a preliminary
						consultation plan.
					</p>
				</div>
				<GardenEstimator client:visible />
			</div>
		</div>

		<!-- Testimonials (Already partially handled by custom slider, but adding generic social proof for volume) -->
		<Testimonials client:visible />
		<FAQ client:visible />
	</main>
</Layout>
