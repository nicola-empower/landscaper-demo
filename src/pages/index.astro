---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import ServiceAreaMap from "../components/ServiceAreaMap.jsx";
import { Trees, Flower, Ruler, Home, Sun, CheckCircle } from "lucide-react";

const philosophyFeatures = [
	{
		title: "Bespoke Design",
		desc: "Every garden is unique. We consider light, soil, and lifestyle to create a plan that works year-round.",
		icon: Ruler,
	},
	{
		title: "Master Craftsmanship",
		desc: "Stone, wood, and water features installed with structural precision that lasts for decades.",
		icon: Home,
	},
	{
		title: "Planting Expertise",
		desc: "From architectural structural trees to soft herbaceous borders, we curate palettes that thrive.",
		icon: Flower,
	},
];
---

<Layout title="Eden Landscapes | Garden Design & Architecture">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Luxury garden design"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.7]"
			/>
			<div
				class="absolute inset-0 bg-linear-to-t from-black/60 via-transparent to-transparent -z-10"
			>
			</div>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-white/80 ring-1 ring-white/20 hover:ring-white/40 transition-all uppercase tracking-wide font-semibold backdrop-blur-sm"
						>
							RHS Gold Medalists • Est. 2005
						</div>
					</div>
					<h1
						class="text-4xl font-header font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-md"
					>
						Curating Nature. <br />
						<span class="text-emerald-300 italic"
							>Designing Lifestyle.</span
						>
					</h1>
					<p
						class="mt-6 text-xl leading-8 text-white/95 drop-shadow-sm max-w-2xl font-body"
					>
						From 3D concept to porcelain reality. We create
						award-winning outdoor living spaces that become an
						extension of your home.
					</p>
					<div class="mt-10 flex flex-wrap items-center gap-6">
						<a
							href="/quote"
							class="rounded-full bg-green-700 px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600 transition-all duration-300 scale-100 hover:scale-105"
						>
							Start Your Dream Garden
						</a>
						<a
							href="/portfolio"
							class="rounded-full bg-white/20 backdrop-blur-md border border-white/30 px-8 py-3.5 text-lg font-semibold text-white hover:bg-white hover:text-green-900 transition-all duration-300"
						>
							View Portfolio <span aria-hidden="true">→</span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- TrustBar -->
		<div class="relative z-20 bg-white shadow-sm">
			<TrustBar client:visible />
		</div>

		<!-- Philosophy Section -->
		<FeatureSection
			client:visible
			title="Designed for Living."
			subtitle="Our Philosophy"
			description="A garden is more than just plants. It’s an extension of your home—a place for entertainment, relaxation, and connection. Our design philosophy centers on how you want to feel in your space."
			features={philosophyFeatures}
			imageSrc="/hero.png"
			align="right"
			quote={null}
			author={null}
		/>

		<!-- The "Garden Planner" Feature (The MVP) -->
		<div class="py-24 bg-green-900 text-white relative overflow-hidden">
			<!-- Background Pattern -->
			<svg
				class="absolute top-0 left-0 w-full h-full opacity-5 pointer-events-none"
				viewBox="0 0 100 100"
				preserveAspectRatio="none"
			>
				<path
					d="M0 0 L100 100 M100 0 L0 100"
					stroke="white"
					stroke-width="0.5"></path>
			</svg>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 relative z-10 text-center"
			>
				<h2
					class="text-3xl font-bold tracking-tight text-white sm:text-4xl font-serif mb-6"
				>
					Visualize Your Project in Minutes
				</h2>
				<p
					class="mx-auto max-w-2xl text-lg leading-8 text-green-100 mb-10"
				>
					Don't know where to start? Use our interactive Garden
					Planner to tell us about your space. Select your style,
					choose your features, and get a preliminary consultation
					plan instantly.
				</p>

				<div
					class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 max-w-4xl mx-auto border border-white/10 shadow-2xl"
				>
					<div class="grid md:grid-cols-3 gap-8 text-left">
						<div class="flex flex-col gap-4">
							<div
								class="bg-green-500/20 w-12 h-12 rounded-lg flex items-center justify-center text-green-300"
							>
								<CheckCircle />
							</div>
							<h3 class="font-bold text-lg">1. Select Style</h3>
							<p class="text-sm text-green-100">
								Modern, Cottage, or Zen? Choose the vibe that
								suits your home.
							</p>
						</div>
						<div class="flex flex-col gap-4">
							<div
								class="bg-green-500/20 w-12 h-12 rounded-lg flex items-center justify-center text-green-300"
							>
								<CheckCircle />
							</div>
							<h3 class="font-bold text-lg">
								2. Choose Features
							</h3>
							<p class="text-sm text-green-100">
								Patios, decking, pergolas, or water features.
							</p>
						</div>
						<div class="flex flex-col gap-4">
							<div
								class="bg-green-500/20 w-12 h-12 rounded-lg flex items-center justify-center text-green-300"
							>
								<CheckCircle />
							</div>
							<h3 class="font-bold text-lg">3. Get Plan</h3>
							<p class="text-sm text-green-100">
								Receive a tailored breakdown and initial quote
								range.
							</p>
						</div>
					</div>
					<div class="mt-10">
						<a
							href="/quote"
							class="inline-block rounded-full bg-white px-8 py-3.5 text-lg font-bold text-green-900 shadow-lg hover:bg-gray-100 transition-all duration-300 transform hover:-translate-y-1"
						>
							Launch Garden Planner &rarr;
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Services (Transformations) -->
		<div class="py-24 bg-stone-50">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2
						class="text-base font-semibold leading-7 text-green-700"
					>
						Competence & Creativity
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-serif"
					>
						Complete Outdoor Transformations
					</p>
				</div>
				<div
					class="mx-auto grid max-w-2xl grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-3"
				>
					<div
						class="bg-white rounded-2xl shadow-sm p-8 hover:shadow-md transition-all"
					>
						<div
							class="bg-stone-100 w-14 h-14 rounded-full flex items-center justify-center text-stone-600 mb-6"
						>
							<Home size={28} />
						</div>
						<h3
							class="text-xl font-bold text-gray-900 mb-4 font-serif"
						>
							Hardscaping & Paving
						</h3>
						<p class="text-gray-600 mb-4">
							Porcelain, Indian Sandstone, and natural York stone
							patios installed on reinforced foundations.
						</p>
						<ul class="space-y-2 text-sm text-gray-500">
							<li>• Porcelain & Stone</li>
							<li>• Retaining Walls</li>
							<li>• Driveways</li>
						</ul>
					</div>
					<div
						class="bg-white rounded-2xl shadow-sm p-8 hover:shadow-md transition-all"
					>
						<div
							class="bg-stone-100 w-14 h-14 rounded-full flex items-center justify-center text-stone-600 mb-6"
						>
							<Sun size={28} />
						</div>
						<h3
							class="text-xl font-bold text-gray-900 mb-4 font-serif"
						>
							Outdoor Living
						</h3>
						<p class="text-gray-600 mb-4">
							Bespoke pergolas, outdoor kitchens, and fire pits
							designed for year-round entertaining.
						</p>
						<ul class="space-y-2 text-sm text-gray-500">
							<li>• Outdoor Kitchens</li>
							<li>• Pergolas & Decking</li>
							<li>• Lighting Schemes</li>
						</ul>
					</div>
					<div
						class="bg-white rounded-2xl shadow-sm p-8 hover:shadow-md transition-all"
					>
						<div
							class="bg-stone-100 w-14 h-14 rounded-full flex items-center justify-center text-stone-600 mb-6"
						>
							<Trees size={28} />
						</div>
						<h3
							class="text-xl font-bold text-gray-900 mb-4 font-serif"
						>
							Softscaping & Lawns
						</h3>
						<p class="text-gray-600 mb-4">
							Premium turfing, wildflower meadows, and mature tree
							planting for instant impact.
						</p>
						<ul class="space-y-2 text-sm text-gray-500">
							<li>• Planting Plans</li>
							<li>• Mature Trees</li>
							<li>• Irrigation Systems</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Recent Work Section -->
		<div class="bg-white py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2
						class="text-3xl font-bold tracking-tight text-green-900 sm:text-4xl font-serif"
					>
						Recent Transformations
					</h2>
					<p class="mt-4 text-lg text-gray-600">
						Latest garden designs brought to life.
					</p>
				</div>
				<div class="mx-auto max-w-4xl">
					<img
						src="/landscaper.png"
						alt="Recent landscaping project"
						class="w-full rounded-2xl shadow-xl ring-1 ring-green-900/10 object-cover aspect-video"
					/>
				</div>

				<!-- Service Area Map Section -->
				<div class="py-24 bg-stone-50">
					<div class="mx-auto max-w-7xl px-6 lg:px-8">
						<div class="mx-auto max-w-2xl text-center mb-16">
							<h2
								class="text-base font-semibold leading-7 text-accent"
							>
								Coverage
							</h2>
							<p
								class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-serif"
							>
								Areas We Serve
							</p>
							<p class="mt-4 text-lg text-gray-600">
								Transforming gardens across Surrey, Hampshire,
								and South West London.
							</p>
						</div>
						<ServiceAreaMap
							client:only="react"
							center={[51.3148, -0.56]}
							city="Woking & Surrounds"
							radiusMiles={25}
						/>
					</div>
				</div>
			</div>
		</div>

		<Testimonials
			client:visible
			reviews={[
				{
					text: "The detail and finish is simply outstanding. We effectively have a new room outdoors. The team was polite, tidy, and the planting scheme is blooming beautifully.",
					author: "The Anderson Family",
					location: "Surrey",
					role: "Garden Transformation",
					rating: 5,
				},
				{
					text: "We didn't just want a patio; we wanted a design. Eden Landscapes provided 3D visualizations that blew us away. The reality looks exactly like the render.",
					author: "Mr. J. Wright",
					location: "Guildford",
					role: "Design Client",
					rating: 5,
				},
				{
					text: "Transformed our muddy backyard into a stunning entertaining space. The porcelain paving is flawless.",
					author: "Sarah & Tom",
					location: "Woking",
					role: "Patio & Living",
					rating: 5,
				},
			]}
		/>

		<!-- CTA Section -->
		<div class="bg-green-900 py-16 sm:py-24" id="contact">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2
						class="text-3xl font-bold tracking-tight text-white sm:text-4xl font-serif"
					>
						Ready to transform your outdoors?
					</h2>
					<p
						class="mx-auto mt-6 max-w-xl text-lg leading-8 text-green-100"
					>
						We are currently booking projects for the upcoming
						season. Use our planner or call us to arrange a site
						survey.
					</p>
					<div class="mt-10 flex justify-center gap-x-6">
						<a
							href="/quote"
							class="rounded-full bg-white px-8 py-3.5 text-lg font-semibold text-green-900 shadow-lg hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white transition-all"
							>Launch Garden Planner</a
						>
					</div>
				</div>
			</div>
		</div>

		<FAQ client:visible />
	</main>
</Layout>
